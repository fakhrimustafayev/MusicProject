                                                    var action = $(this).data('action');

                                                    // Perform action based on the button clicked
                                                    if (action === 'add') {
                                                        // Redirect to the add user page or trigger the add user action
                                                        window.location.href = '/admin/Users/AddUser'; // Example URL for adding user
